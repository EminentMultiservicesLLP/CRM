                            <input class="checkboxfreeze" id="octFreeze" name="octFreeze" type="checkbox" style="margin: 5px;">
                        </div>
                        <div class="col-sm-1 table-bordered">
                            <label for="nov" class="required">Nov : </label>
                            <input class="form-control" placeholder="November" id="nov" type="text" style="margin: 5px;" />
                            <label for="novFreeze" style="font-weight: 500;">Freeze : </label>
                            <input class="checkboxfreeze" id="novFreeze" name="novFreeze" type="checkbox" style="margin: 5px;">
                        </div>
                        <div class="col-sm-1 table-bordered">
                            <label for="dec" class="required">Dec : </label>
                            <input class="form-control" placeholder="December" id="dec" type="text" style="margin: 5px;" />
                            <label for="decFreeze" style="font-weight: 500;">Freeze : </label>
                            <input class="checkboxfreeze" id="decFreeze" name="decFreeze" type="checkbox" style="margin: 5px;">
                        </div>
                        <div class="col-sm-1 table-bordered">
                            <label for="jan" class="required">Jan : </label>
                            <input class="form-control" placeholder="January" id="jan" type="text" style="margin: 5px;" />
                            <label for="janFreeze" style="font-weight: 500;">Freeze : </label>
                            <input class="checkboxfreeze" id="janFreeze" name="janFreeze" type="checkbox" style="margin: 5px;">
                        </div>
                        <div class="col-sm-1 table-bordered">
                            <label for="feb" class="required">Feb : </label>
                            <input class="form-control" placeholder="February" id="feb" type="text" style="margin: 5px;" />
                            <label for="febFreeze" style="font-weight: 500;">Freeze : </label>
                            <input class="checkboxfreeze" id="febFreeze" name="febFreeze" type="checkbox" style="margin: 5px;">
                        </div>
                        <div class="col-sm-1 table-bordered">
                            <label for="mar" class="required">Mar : </label>
                            <input class="form-control" placeholder="March" id="mar" type="text" style="margin: 5px;" />
                            <label for="marFreeze" style="font-weight: 500;">Freeze : </label>
                            <input class="checkboxfreeze" id="marFreeze" name="marFreeze" type="checkbox" style="margin: 5px;">
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</fieldset>
<script src="~/Scripts/Admin/UserConfigurationMaster.js"></script>